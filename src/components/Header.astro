<style>
  .social-icons {
    display: flex;
    gap: 12px;
    margin-top: 1rem;
  }
  
  .social-icon {
    color: #777;
    transition: color 0.2s ease, transform 0.2s ease;
  }
  
  .social-icons a:hover .social-icon {
    color: #333;
    transform: translateY(-2px);
  }
</style>
